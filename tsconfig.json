{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "types": [ "node", "jest" ],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "pipes/*",
    "middlewares/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "typeAcquisition": {
    "include": [
      "jest"
    ]
  }
}
